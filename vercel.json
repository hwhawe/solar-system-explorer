{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist" 
      }
    },
    {
      "src": "api/index.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": [ 
          "api/node_modules/**",
          "api/package.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js" 
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1" 
    }
  ]
}